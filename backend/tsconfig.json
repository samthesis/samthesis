{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,         // Allow JavaScript files in the project
    "checkJs": false,        // Skip type checking for JS files
    "skipLibCheck": true,

  },
  "include": [
    "./**/*.ts", "/*.ts"  ,
    "./**/*.js" , "/*.js","*.ts", "*.js","./servicephotos/**/*","./photos/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"       // Exclude any additional directories like build if present
  ]
}
